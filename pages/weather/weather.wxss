}

.ggwx-forcastType {
  display: flex;
}
.ggwx-forcastType view{
  margin-top:6px
}

.typeImage {
  width:30px;
height:30px;
padding-right: 5px;
}

.ggwx-forcastMax {
  letter-spacing:2px;
}

.ggwx-currentDress {
  font-size:24rpx;
margin-top:28rpx;
color:#666;
box-shadow:0px 0px 8px #e8e8e8;
height:160rpx;
}
