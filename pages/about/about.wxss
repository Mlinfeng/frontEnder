.about-gxContainer {
}

.about-gxContainer-title {
  background-image: -webkit-linear-gradient(left, #1a0608, #e47c92 75%,#cb769a 50%,#bc78a2 25%, #200e10 );
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
   -webkit-background-size: 200% 100%;
  -webkit-animation: about-gxContainer-title 4s infinite linear;
  padding:3px 10px;
  margin-bottom:8px;
  font-size:34rpx;
  letter-spacing:2px;
}
 @-webkit-keyframes about-gxContainer-title {
         0%{ background-position: 0 0;}
         100% { background-position: -100% 0;}
 }
 .about-gxContainer-title::before{
   content: "‚óè|";
   color:#ee6e78 !important;
   font-size: 24rpx;
   margin-right: 2px;

 }
