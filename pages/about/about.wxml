          </view>
          <view class='about-funcList-item' catchtap="onMoreTap">
            <icon class='iconfont icon-more'></icon>
            <text>惊喜</text>
          </view>
           <view class='about-funcList-item' catchtap="onInfoTap">
            <icon class='iconfont icon-dictionary01'></icon>
            <text>彩蛋</text>
          </view>
